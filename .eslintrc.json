{
  "env": {
    "es6": true,
    "node": true,
    "jest": true,
    "browser": true,
    "commonjs": true
  },
  "extends": [
    "prettier",
    "prettier/react",
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "prettier"
  ],
  "rules": {
    "no-useless-escape": "off",
    "semi": ["error", "always"],
    "react/jsx-uses-vars": ["error"],
    "react/jsx-uses-react": ["error"],
    "linebreak-style": ["error", "unix"],
    "indent-legacy": ["error", 2, { "SwitchCase": 1}],
    "no-console": ["error", { "allow": ["warn", "error"] }],
    "comma-spacing": ["error", { "before": false, "after": true }],
    "quotes": ["error", "single", {
      "avoidEscape": true,
      "allowTemplateLiterals": true
    }],
    "prettier/prettier": ["error", {
      "singleQuote": true,
      "trailingComma": "es5",
      "bracketSpacing": true
    }]
  }
}
